<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_profil">

    <Button
        android:id="@+id/bIklim"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="  ZONA CUACA, IKLIM, GEMPA BUMI"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="left|center"
        android:background="@drawable/my_button_bg_profil"/>

    <Button
        android:id="@+id/bPurba"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="  ZONA KEHIDUPAN PURBA"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="left|center"
        android:background="@drawable/my_button_bg_profil"/>

    <Button
        android:id="@+id/bDome"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="  DOME AREA"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="left|center"
        android:background="@drawable/my_button_bg_profil"/>

    <Button
        android:id="@+id/bSurya"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="  ZONA TATA SURYA"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="left|center"
        android:background="@drawable/my_button_bg_profil"/>
</LinearLayout>